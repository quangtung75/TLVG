<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imagePickerFragment">

    <fragment
        android:id="@+id/imagePickerFragment"
        android:name="com.quangtung.gantimelapse.presentation.ImagePickerFragment"
        android:label="fragment_image_picker"
        tools:layout="@layout/fragment_image_picker" >
        <action
            android:id="@+id/action_imagePickerFragment_to_processingFragment"
            app:destination="@id/processingFragment" />
    </fragment>
    <fragment
        android:id="@+id/processingFragment"
        android:name="com.quangtung.gantimelapse.presentation.ProcessingFragment"
        android:label="fragment_processing"
        tools:layout="@layout/fragment_processing" >
        <action
            android:id="@+id/action_processingFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/processingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.quangtung.gantimelapse.presentation.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" />
</navigation>